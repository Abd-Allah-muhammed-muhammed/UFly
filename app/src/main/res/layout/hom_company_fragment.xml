<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <com.google.android.material.circularreveal.coordinatorlayout.CircularRevealCoordinatorLayout


        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <RelativeLayout
            android:id="@+id/layout_rv_data"
            android:background="@color/dark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity"
            tools:showIn="@layout/activity_hom_company">


            <ProgressBar
                android:indeterminate="true"
                android:indeterminateTintMode="src_atop"
                android:indeterminateTint="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:visibility="gone"
                android:id="@+id/prog_home"
                android:layout_centerInParent="true"
                android:layout_marginStart="145dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="158dp"
                android:layout_marginBottom="12dp"
                android:elevation="10dp" />


            <RelativeLayout
                android:id="@+id/layout_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <SearchView
                    android:backgroundTintMode="screen"
                    android:showDividers="beginning"
                    android:layout_marginTop="@dimen/_4"
                    android:background="@drawable/bg_btn_book_whit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50"
                    android:layout_marginStart="@dimen/_18"
                    android:layout_marginEnd="@dimen/_18" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/_4"
                android:layout_below="@+id/layout_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_filter">

            </RelativeLayout>


            <RelativeLayout

                android:layout_marginBottom="@dimen/_50"
                android:layout_below="@+id/layout_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    tools:listitem="@layout/item_trips"
                    android:id="@+id/rev_trip_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:padding="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </RelativeLayout>






        </RelativeLayout>



        <RelativeLayout

            android:id="@+id/cycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--            <FrameLayout-->
            <!--                android:layout_above="@+id/bottom_nav"-->
            <!--                android:id="@+id/frame_main"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="match_parent"-->
            <!--                tools:ignore="MissingConstraints">-->

            <!--            </FrameLayout>-->


            <com.abdallah.ufly.ui.bottom_nav.BottomNavView
                android:scrollbarStyle="insideInset"
                app:itemTextColor="@color/blck"
                app:itemIconTint="@color/color2"
                android:id="@+id/bottom_nav"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50"
                android:layout_alignParentBottom="true"
                >


            </com.abdallah.ufly.ui.bottom_nav.BottomNavView>



        </RelativeLayout>





        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/floting_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginStart="@dimen/fab_margin"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_marginEnd="@dimen/fab_margin"
            android:layout_marginBottom="@dimen/_50"
            android:tint="@color/trans"
            app:backgroundTint="@color/trans"
            app:menu_backgroundColor="@android:color/transparent"
            app:menu_colorNormal="@color/colorPrimary"
            app:menu_colorPressed="@color/colorPrimary"
            app:menu_labels_colorNormal="@color/dark"
            app:menu_labels_textColor="@color/color2"
            app:menu_openDirection="up"
            app:rippleColor="@color/color2"
            tools:ignore="MissingConstraints">


<!--            <com.github.clans.fab.FloatingActionButton-->
<!--                android:id="@+id/add_fb"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:src="@drawable/ic_number_orange_24dp"-->
<!--                android:tint="@color/color2"-->
<!--                app:backgroundTint="@color/color2"-->
<!--                app:fab_colorPressed="@color/colorPrimary"-->
<!--                app:fab_colorRipple="@color/colorPrimary"-->
<!--                app:fab_label="اضافة طلب"-->
<!--                app:fab_size="mini"-->
<!--                app:menu_colorNormal="@color/colorPrimary"-->
<!--                app:menu_openDirection="up"-->
<!--                app:rippleColor="@android:color/white" />-->

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/add_fb_trip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_number_green"
                android:tint="@color/color2"
                app:backgroundTint="@color/color2"
                app:fab_colorPressed="@color/color2"
                app:fab_label="@string/add_trip"
                app:fab_progress_color="@color/color3"
                app:fab_size="mini"
                app:fab_colorDisabled="@color/white"

                app:fab_colorNormal="@color/dark"
                app:menu_colorNormal="@color/color2"

                app:menu_openDirection="up"
                app:rippleColor="@color/color2" />


        </com.github.clans.fab.FloatingActionMenu>



        <RelativeLayout

            android:id="@+id/line_id"
            android:layout_gravity="bottom|center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/oval_green"
            tools:ignore="MissingConstraints" >


            <com.sdsmdg.harjot.vectormaster.VectorMasterView
                android:id="@+id/fab"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/_12"
                android:elevation="@dimen/_6"
                android:visibility="gone"
                app:vector_src="@drawable/ic_person_outline_black_24dp"
                android:layout_width="54dp"
                android:layout_height="54dp"/>


            <com.sdsmdg.harjot.vectormaster.VectorMasterView
                android:id="@+id/fab2"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/_12"
                android:elevation="@dimen/_6"
                app:vector_src="@drawable/ic_home_black_24dp"
                android:layout_width="54dp"
                android:layout_height="54dp"/>

            <com.sdsmdg.harjot.vectormaster.VectorMasterView
                android:id="@+id/fab3"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/_12"
                android:elevation="@dimen/_6"
                android:visibility="gone"
                app:vector_src="@drawable/ic_account_balance_wallet_green"
                android:layout_width="54dp"
                android:layout_height="54dp"/>

        </RelativeLayout>








    </com.google.android.material.circularreveal.coordinatorlayout.CircularRevealCoordinatorLayout>



</layout>