<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <data>


        <variable
            name="desc_book"
            type="com.abdallah.ufly.ui.description.TripDescriptionViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:id="@+id/sl_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--parent layout id is  layout_desc-->
            <RelativeLayout
                android:id="@+id/layout_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:id="@+id/layout_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_top">

                    <ImageButton
                        android:id="@+id/back"
                        android:layout_width="@dimen/_50"
                        android:layout_height="@dimen/_50"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/ic_back_dark" />
                </RelativeLayout>
                <!-- all info in this layout id is layout_all_info -->
                <RelativeLayout
                    android:id="@+id/layout_all_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_top"
                    android:layout_margin="@dimen/_16"
                    android:background="@drawable/bg_descr">


                    <!-- from to shape with bus icon -->
                    <RelativeLayout
                        android:id="@+id/layout_desc_from_to"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8">

                        <ImageView
                            android:id="@+id/img_move"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_70"
                            android:src="@drawable/ic_move" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/img_move"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/layout_from"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:paddingStart="@dimen/_14"
                                    android:paddingEnd="@dimen/_14s"
                                    android:text="@string/from"
                                    android:textColor="@color/color3"
                                    android:textSize="@dimen/_18s" />

                                <TextView

                                    android:id="@+id/desc_from"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:gravity="center"
                                    android:paddingStart="@dimen/_14"
                                    android:paddingEnd="@dimen/_14s"
                                    android:text="@string/cairo"
                                    android:textColor="@color/blck"
                                    android:textColorHint="@color/blck"
                                    android:textSize="@dimen/_14s" />

                            </LinearLayout>

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/ic_bus_orange" />

                            <LinearLayout
                                android:id="@+id/layout_to"

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:paddingStart="@dimen/_14"
                                    android:paddingEnd="@dimen/_14s"
                                    android:text="@string/to"
                                    android:textColor="@color/color3"
                                    android:textSize="@dimen/_18s" />

                                <TextView
                                    android:id="@+id/desc_to"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:gravity="center"
                                    android:paddingStart="@dimen/_14"
                                    android:paddingEnd="@dimen/_14s"
                                    android:text="@string/alexandria"
                                    android:textColor="@color/blck"
                                    android:textColorHint="@color/blck"
                                    android:textSize="@dimen/_14s" />
                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                    <!--line one -->
                    <TextView
                        android:id="@+id/line_1"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@+id/layout_desc_from_to"
                        android:layout_margin="@dimen/_16"
                        android:layout_marginTop="@dimen/_16"
                        android:background="@color/trans3" />


                    <!-- text view  include   id is inclouds_tv-->
                    <TextView

                        android:id="@+id/inclouds_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layout_desc_from_to"
                        android:layout_marginStart="@dimen/_24"
                        android:layout_marginTop="@dimen/_24"
                        android:layout_marginEnd="@dimen/_24"
                        android:drawableStart="@drawable/ic_inclouds"
                        android:drawablePadding="@dimen/_24"
                        android:text="@string/inclouds"
                        android:textColor="@color/blck"
                        android:textSize="@dimen/_20s"
                        android:textStyle="bold" />


                    <!--                     rv includ id is layout_rv-->
                    <RelativeLayout
                        android:id="@+id/layout_rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/inclouds_tv"
                        android:layout_margin="@dimen/_16"
                        android:background="@drawable/bg_includse">

                        <TextView

                            android:id="@+id/desc_include"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_24"
                            android:gravity="center"
                            android:textColor="@color/blck"
                            android:textSize="@dimen/_18s" />

                    </RelativeLayout>


                    <!--                    trip info tv  id is tripinfo_tv-->
                    <TextView
                        android:id="@+id/tripinfo_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layout_rv"
                        android:layout_marginStart="@dimen/_24"
                        android:layout_marginTop="@dimen/_24"
                        android:layout_marginEnd="@dimen/_24"
                        android:drawableStart="@drawable/ic_info_24px"
                        android:drawablePadding="@dimen/_24"
                        android:text="@string/trip_information"
                        android:textColor="@color/blck"
                        android:textSize="@dimen/_20s"
                        android:textStyle="bold" />

                    <!--                    rv info layout_rv2 -->
                    <RelativeLayout
                        android:id="@+id/layout_rv2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tripinfo_tv"
                        android:layout_margin="@dimen/_16"
                        android:background="@drawable/bg_includse">

                        <TextView
                            android:id="@+id/desc_tv_trip_info"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_50"
                            android:textColor="@color/blck"
                            android:textSize="@dimen/_20s" />


                    </RelativeLayout>


                    <TextView
                        android:id="@+id/text_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layout_rv2"
                        android:layout_margin="@dimen/_24"
                        android:drawableStart="@drawable/bg_plus"
                        android:drawablePadding="@dimen/_24"
                        android:text="Number of Passengers"
                        android:textColor="@color/blck"
                        android:textSize="@dimen/_20s"
                        android:textStyle="bold" />


                    <LinearLayout


                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_number"
                        android:layout_margin="@dimen/_24"
                        android:orientation="horizontal">


                        <Button
                            android:layout_width="0dp"

                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/ic_minus"
                            android:onClick="@{(view)->desc_book.minus(view)}"
                            android:text="-"
                            android:textColor="@color/blck"
                            android:textSize="@dimen/_20s" />

                        <LinearLayout
                            android:id="@+id/layout_price"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_50"
                            android:layout_marginStart="@dimen/_16"
                            android:layout_marginEnd="@dimen/_16"
                            android:layout_weight="2"
                            android:background="@drawable/bg_price"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/count_passenger"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@{desc_book.the_number}"
                                android:textColor="@color/blck"
                                android:textSize="@dimen/_18s"
                                android:textStyle="bold">

                            </TextView>

                            <TextView
                                android:id="@+id/count_price"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@{desc_book.price}"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_18s"
                                android:textStyle="bold">

                            </TextView>
                        </LinearLayout>

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/ic_plus"
                            android:onClick="@{(view)->desc_book.plus(view)}"
                            android:text="+"
                            android:textColor="@color/blck"
                            android:textSize="@dimen/_20s" />

                    </LinearLayout>


                </RelativeLayout>


                <Button
                    android:id="@+id/desc_btn_book"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_all_info"
                    android:layout_marginStart="@dimen/_40"
                    android:layout_marginTop="@dimen/_4"
                    android:layout_marginEnd="@dimen/_40"
                    android:background="@drawable/bg_btn_book"
                    android:elevation="2dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="@string/book"
                    android:textColor="@color/trans3"
                    android:textSize="@dimen/_20s"
                    android:textStyle="bold" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/desc_btn_book"
                    android:layout_alignParentBottom="true">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_170"
                        android:src="@drawable/bottom_shap" />

                </RelativeLayout>


            </RelativeLayout>


        </ScrollView>


    </RelativeLayout>


</layout>