<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <RelativeLayout
        android:background="@color/dark"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        tools:showIn="@layout/activity_home">


       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/layout_filter">

           <ImageView
               android:id="@+id/img_move"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_move"/>



           <LinearLayout
               android:layout_below="@+id/img_move"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <LinearLayout
                   android:id="@+id/layout_from"
                   android:orientation="vertical"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1">

                   <TextView
                       android:textSize="@dimen/_18s"
                       android:gravity="center"
                       android:textColor="@color/yalow"
                       android:paddingStart="@dimen/_14"
                       android:text="@string/from"
                       android:paddingEnd="@dimen/_14s"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>

                   <AutoCompleteTextView
                       android:drawableStart="@drawable/ic_spinner"

                       android:id="@+id/aouto_tv_from"
                       android:paddingEnd="@dimen/_14s"
                       android:paddingStart="@dimen/_14"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:background="@android:color/transparent"
                       android:hint="..."
                       android:textColor="@color/white"
                       android:textColorHint="@color/trans3"
                       android:textSize="@dimen/_14s"
                       android:gravity="center"/>

               </LinearLayout>

               <ImageView
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_bus"/>

               <LinearLayout
                   android:id="@+id/layout_to"

                   android:orientation="vertical"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1">

                   <TextView
                       android:textSize="@dimen/_18s"
                       android:gravity="center"
                       android:textColor="@color/yalow"
                       android:paddingStart="@dimen/_14"
                       android:text="@string/to"
                       android:paddingEnd="@dimen/_14s"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>

                   <AutoCompleteTextView
                       android:drawableEnd="@drawable/ic_spinner"

                       android:id="@+id/aouto_tv_to"
                       android:paddingEnd="@dimen/_14s"
                       android:paddingStart="@dimen/_14"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:background="@android:color/transparent"
                       android:hint="..."
                       android:textColor="@color/white"
                       android:textColorHint="@color/trans3"
                       android:textSize="@dimen/_14s"
                       android:gravity="center"/>
               </LinearLayout>

           </LinearLayout>

       </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@+id/layout_filter"
            tools:listitem="@layout/item_trips"
            android:id="@+id/rev_trip_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:padding="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </RelativeLayout>
</layout>