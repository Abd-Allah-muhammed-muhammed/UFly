<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>

        <variable
            name="my_trip"
            type="com.abdallah.ufly.model.my_trip.MyTripResponse" />
    </data>



    <RelativeLayout

        android:id="@+id/my_triplayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark">





        <ImageButton

            android:id="@+id/back_mytrip"
            android:layout_width="@dimen/_50"
            android:layout_height="@dimen/_50"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:background="@drawable/ic_back" />

        <ImageView
            android:id="@+id/text_mytrip"
            android:layout_width="@dimen/_70"
            android:layout_height="@dimen/_70"
            android:layout_below="@+id/back_mytrip"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/_8"
            android:src="@drawable/ic_logo" />





        <RelativeLayout
            android:id="@+id/my_trip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_mytrip"
            android:layout_margin="@dimen/_4"
            android:background="@drawable/bg_card_trip">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <LinearLayout
                    android:id="@+id/layout_dep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16"
                    android:layout_marginTop="@dimen/_24"
                    android:layout_marginEnd="@dimen/_16"
                    android:layout_marginBottom="@dimen/_16"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/depar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16"
                        android:layout_marginTop="@dimen/_8"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="@string/departure"
                        android:textColor="@color/blck"
                        android:textSize="@dimen/_18s"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/arr"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8"
                        android:layout_marginEnd="@dimen/_28"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="@string/arrival"
                        android:textColor="@color/blck"
                        android:textSize="@dimen/_18s"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_dep_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50"
                    android:layout_below="@+id/layout_dep"
                    android:layout_marginStart="@dimen/_20"
                    android:layout_marginEnd="@dimen/_20"
                    android:background="@drawable/ic_bg_trip_where_1">

                    <TextView
                        android:id="@+id/tv_departure"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingStart="@dimen/_14"
                        android:paddingEnd="@dimen/_14"
                        android:text="@{my_trip.data.departure}"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/_18s"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/to"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".5"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center"
                        android:text="@string/to"
                        android:textColor="@color/color3"
                        android:textSize="@dimen/_18s" />


                    <TextView
                        android:id="@+id/tv_arrival"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingStart="@dimen/_14"
                        android:paddingEnd="@dimen/_14"
                        android:text="@{my_trip.data.arrival}"
                        android:textColor="@color/color5"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/_18"
                        android:textStyle="bold" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layout_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_dep_view"
                    android:layout_margin="@dimen/_8"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_28"
                        android:layout_weight="2"
                        android:text="@string/date"
                        android:textColor="@color/blck"
                        android:textSize="@dimen/_18s"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/date_until"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_35"
                        android:layout_weight="2"
                        android:gravity="end"
                        android:text="@string/to_date"
                        android:textColor="@color/blck"
                        android:textSize="@dimen/_18s"
                        android:textStyle="bold" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layout_date_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50"
                    android:layout_below="@+id/layout_date"
                    android:layout_marginStart="@dimen/_20"
                    android:layout_marginEnd="@dimen/_20"
                    android:background="@drawable/ic_bg_trip_where_1">

                    <TextView

                        android:id="@+id/tv_from_data"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/_6"
                        android:text="@{my_trip.data.dateFrom}"
                        android:textColor="@color/white"
                        android:textColorHint="@color/color5"
                        android:textSize="@dimen/_14s"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/until"

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".5"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center"
                        android:text="@string/until"
                        android:textColor="@color/color3"
                        android:textSize="@dimen/_18s" />


                    <TextView
                        android:id="@+id/tv_to_date"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/_6"
                        android:text="@{my_trip.data.dateUntil}"
                        android:textColor="@color/color5"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/_14s"
                        android:textStyle="bold" />


                </LinearLayout>


                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_date_view"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_8"
                    android:layout_marginBottom="@dimen/_30"
                    android:drawableEnd="@drawable/ic_mony"
                    android:drawablePadding="@dimen/_8"
                    android:text="@{my_trip.data.price.toString()}"
                    android:textColor="@color/dark"
                    android:textColorHint="@color/dark"
                    android:textSize="@dimen/_32s"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/my_trip_is_paid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/price"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/_40"
                    android:layout_marginTop="@dimen/_24"
                    android:layout_marginEnd="@dimen/_40"
                    android:hint="@string/is_paid"
                    android:layout_marginBottom="@dimen/_70"
                    android:textColor="@color/dark"
                    android:textColorHint="@color/dark"
                    android:textSize="@dimen/_24_sp"
                    android:textStyle="bold" />



                <ProgressBar
                    android:visibility="gone"
                    android:layout_below="@+id/price"
                    android:id="@+id/progCancelMyTrip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indeterminateTint="@color/blck"  />

                <ImageView
                    android:src="@drawable/ic_cncle"
                    android:id="@+id/my_trip_cancel"
                    android:layout_width="@dimen/_70"
                    android:layout_height="@dimen/_70"
                    android:layout_below="@+id/price"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/_40"
                    android:layout_marginBottom="@dimen/_40"
                    android:layout_toEndOf="@+id/my_trip_is_paid"
                    android:textSize="@dimen/_24_sp"
                    android:textStyle="bold" />



            </RelativeLayout>


        </RelativeLayout>



        <ProgressBar
            android:id="@+id/progMyTrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/white"  />



        <TextView
            android:visibility="gone"
            android:id="@+id/text_no_trips"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_18s"
            android:text="@string/no_trip_booked"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/back_home"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_24"
            android:layout_below="@+id/text_no_trips"
            android:gravity="center"
            android:textColor="@color/color3"
            android:textSize="@dimen/_24_sp"
            android:text="@string/cleck_To_book"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



        <Button
            android:id="@+id/my_trip_pay_now"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_70"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="@dimen/_16"
            android:background="@drawable/bg_btn_book_orange"
            android:text="@string/pay_now"
            android:textColor="@color/white"
            android:textSize="@dimen/_18s" />


    </RelativeLayout>


</layout>
