<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="sign"
            type="com.abdallah.ufly.registration.sign_up.SignUpViewModel" />

    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_regstration">


        <ImageView
            android:id="@+id/logo_dark_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_30"
            android:layout_marginTop="@dimen/_100"
            android:src="@drawable/logo_dark" />


        <TextView
            android:layout_marginTop="@dimen/_12"
            android:id="@+id/text_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_30"
            android:text="@string/creat_acc"
            android:textColor="@color/white"
            android:textSize="21sp" />



        <EditText
            android:text="@{sign.fullName}"
            android:textColor="@color/white"
            android:drawablePadding="@dimen/_18"
            android:textColorHint="@color/dot_dark_screen1"
            android:hint="@string/your_full_name"
            android:id="@+id/et_name"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_marginTop="@dimen/_24"
            android:layout_marginEnd="@dimen/_18"
            android:layout_marginStart="@dimen/_18"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/ic_name"
            android:layout_width="match_parent"
            android:layout_below="@+id/logo_dark_small"
            android:layout_height="@dimen/_40"/>

        <TextView
            android:id="@+id/view_name"
            android:background="@color/white"
            android:layout_marginEnd="@dimen/_18"
            android:layout_marginStart="@dimen/_18"
            android:layout_below="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            />



        <EditText
            android:inputType="textPostalAddress"
            android:textColor="@color/white"
            android:drawablePadding="@dimen/_18"
            android:textColorHint="@color/dot_dark_screen1"
            android:hint="@string/your_address"
            android:fontFamily="sans-serif-condensed-medium"
            android:id="@+id/et_address"
            android:layout_marginTop="@dimen/_24"
            android:layout_marginEnd="@dimen/_18"
            android:layout_marginStart="@dimen/_18"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/ic_mail"
            android:layout_width="match_parent"
            android:layout_below="@+id/et_name"
            android:layout_height="@dimen/_40"/>

        <TextView
            android:id="@+id/view_address"
            android:background="@color/white"
            android:layout_marginEnd="@dimen/_18"
            android:layout_marginStart="@dimen/_18"
            android:layout_below="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            />






        <EditText
            android:inputType="phone"
            android:textColor="@color/white"
            android:drawablePadding="@dimen/_18"
            android:textColorHint="@color/dot_dark_screen1"
            android:hint="@string/your_phone"
            android:fontFamily="sans-serif-condensed-medium"
            android:id="@+id/et_phone"
            android:layout_marginTop="@dimen/_24"
            android:layout_marginEnd="@dimen/_18"
            android:layout_marginStart="@dimen/_18"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/ic_phone"
            android:layout_width="match_parent"
            android:layout_below="@+id/et_address"
            android:layout_height="@dimen/_40"/>

        <TextView
            android:id="@+id/view_phone"
            android:background="@color/white"
            android:layout_marginEnd="@dimen/_18"
            android:layout_marginStart="@dimen/_18"
            android:layout_below="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            />


        <EditText
            android:inputType="textEmailAddress"
            android:id="@+id/et_mail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40"
            android:layout_below="@+id/et_phone"
            android:layout_marginStart="@dimen/_18"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="@dimen/_18"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/ic_mail"
            android:drawablePadding="@dimen/_18"
            android:fontFamily="sans-serif-condensed-medium"
            android:hint="@string/your_mail"
            android:textColor="@color/white"
            android:textColorHint="@color/dot_dark_screen1"
            />

        <TextView
            android:id="@+id/view_mail"
            android:background="@color/white"
            android:layout_marginEnd="@dimen/_18"
            android:layout_marginStart="@dimen/_18"
            android:layout_below="@+id/et_mail"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            />



        <EditText
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:drawablePadding="@dimen/_18"
            android:textColorHint="@color/dot_dark_screen1"
            android:hint="@string/your_password"
            android:fontFamily="sans-serif-condensed-medium"
            android:id="@+id/et_password"
            android:layout_marginTop="@dimen/_24"
            android:layout_marginEnd="@dimen/_18"
            android:layout_marginStart="@dimen/_18"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/ic_password"
            android:layout_width="match_parent"
            android:layout_below="@+id/et_mail"
            android:layout_height="@dimen/_40"/>

        <TextView
            android:id="@+id/view_password"
            android:background="@color/white"
            android:layout_marginEnd="@dimen/_18"
            android:layout_marginStart="@dimen/_18"
            android:layout_below="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            />


        <EditText
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:drawablePadding="@dimen/_18"
            android:textColorHint="@color/dot_dark_screen1"

            android:hint="@string/re_your_password"
            android:fontFamily="sans-serif-condensed-medium"
            android:id="@+id/et_re_password"
            android:layout_marginTop="@dimen/_24"
            android:layout_marginEnd="@dimen/_18"
            android:layout_marginStart="@dimen/_18"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/ic_password"
            android:layout_width="match_parent"
            android:layout_below="@+id/et_password"
            android:layout_height="@dimen/_40"/>

        <TextView
            android:id="@+id/view_re_password"
            android:background="@color/white"
            android:layout_marginEnd="@dimen/_18"
            android:layout_marginStart="@dimen/_18"
            android:layout_below="@+id/et_re_password"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            />

        <Button
            android:onClick="@{() -> sign.onClick()}"
            android:id="@+id/btn_sign_up_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70"
            android:layout_below="@+id/view_re_password"
            android:layout_marginStart="@dimen/_30"
            android:layout_marginTop="@dimen/_18"
            android:layout_marginEnd="@dimen/_30"
            android:background="@drawable/custom_button_drawable"
            android:text="@string/sign_up"
            android:textColor="@color/dark"
            android:textSize="@dimen/_24_sp" />

    </RelativeLayout>

</layout>
