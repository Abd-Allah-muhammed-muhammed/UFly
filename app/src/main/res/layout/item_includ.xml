<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <data>

        <variable
            name="includes"
            type="com.abdallah.ufly.model.includes.Include" />
    </data>

    <LinearLayout
        android:background="@drawable/bg_card_trip"

        android:layout_width="match_parent"
        android:layout_height="@dimen/_60"
        android:orientation="vertical">


        <TextView
            android:text="@{includes.name}"
            android:id="@+id/desc_includ"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/dark_trans"
            android:textSize="@dimen/_18s" />

        <TextView
            android:layout_marginStart="@dimen/_16"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginEnd="@dimen/_16"
            android:background="@color/blck" />

    </LinearLayout>
</layout>
