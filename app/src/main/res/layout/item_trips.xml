<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="tripinfo"
            type="com.abdallah.ufly.model.trips.TripsResponse"/>

    </data>

<RelativeLayout
    android:layout_margin="@dimen/_4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<androidx.cardview.widget.CardView
    android:orientation="vertical"
   app:cardBackgroundColor="@color/trans3"
    app:cardCornerRadius="@dimen/_30"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_270">

    <androidx.cardview.widget.CardView

        android:id="@+id/card"
        app:cardCornerRadius="@dimen/_30"
       app:cardBackgroundColor="@color/trans2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <RelativeLayout
            android:id="@+id/layout_card_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/layout_dep"
                android:layout_marginTop="@dimen/_20"
                android:layout_marginStart="@dimen/_18"
                android:layout_width="@dimen/_150"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="center"
                    android:id="@+id/depar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/departure"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/_18s"
                    />



                <TextView
                    android:layout_marginTop="@dimen/_4"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_below="@+id/depar"
                    android:id="@+id/tv_departure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{tripinfo.departuer}"
                    android:textColor="@color/yalow"
                    android:textSize="@dimen/_20s"
                    />

            </RelativeLayout>


            <RelativeLayout


                android:layout_toEndOf="@+id/layout_dep"
                android:id="@+id/layout_arr"
                android:layout_marginTop="@dimen/_20"
                android:layout_marginStart="@dimen/_24"
                android:layout_width="@dimen/_150"
                android:layout_height="wrap_content">


                <TextView
                    android:gravity="center"
                    android:id="@+id/arr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/arrival"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/_18s"
                    />



                <TextView
                    android:layout_marginTop="@dimen/_4"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_below="@+id/arr"
                    android:id="@+id/tv_arrival"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{tripinfo.arrival}"
                    android:textColor="@color/yalow"
                    android:textSize="@dimen/_20s"
                    />

            </RelativeLayout>


            <TextView
                android:id="@+id/line_one"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/dark"
                android:layout_below="@+id/layout_dep"
                android:layout_marginTop="@dimen/_4"
                android:layout_marginStart="@dimen/_24"
                android:layout_marginEnd="@dimen/_24"
                />


            <RelativeLayout
                android:layout_below="@+id/line_one"
                android:id="@+id/layout_date_from"
                android:layout_marginTop="@dimen/_8"
                android:layout_marginStart="@dimen/_18"
                android:layout_width="@dimen/_150"
                android:layout_height="wrap_content">


                <TextView
                    android:gravity="center"
                    android:id="@+id/f_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/date"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/_18s"
                    />



                <TextView
                    android:layout_marginTop="@dimen/_4"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_below="@+id/f_date"
                    android:id="@+id/tv_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{tripinfo.dateFrom}"
                    android:textColor="@color/dot_dark_screen1"
                    android:textSize="@dimen/_14s"
                    />

            </RelativeLayout>


            <RelativeLayout


                android:layout_below="@+id/line_one"
                android:layout_toEndOf="@+id/layout_date_from"
                android:id="@+id/layout_to_date"
                android:layout_marginTop="@dimen/_8"
                android:layout_marginStart="@dimen/_24"
                android:layout_width="@dimen/_150"
                android:layout_height="wrap_content">


                <TextView
                    android:gravity="center"
                    android:id="@+id/to_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/to_date"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/_18s"
                    />



                <TextView
                    android:layout_marginTop="@dimen/_4"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_below="@+id/to_date"
                    android:id="@+id/tv_to_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{tripinfo.dateUntil}"
                    android:textColor="@color/dot_dark_screen1"
                    android:textSize="@dimen/_14s"
                    />

            </RelativeLayout>

<TextView
            android:id="@+id/line_tow"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/dark"
            android:layout_below="@+id/layout_date_from"
            android:layout_marginTop="@dimen/_4"
            android:layout_marginStart="@dimen/_24"
            android:layout_marginEnd="@dimen/_24"
            />

            <RelativeLayout
                android:layout_below="@+id/line_tow"
                android:id="@+id/layout_passengers"
                android:layout_marginTop="@dimen/_14"
                android:layout_marginStart="@dimen/_18"
                android:layout_width="@dimen/_150"
                android:layout_height="wrap_content">


                <TextView
                    android:gravity="center"
                    android:id="@+id/passengers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/passengers"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/_20s"
                    />



                <TextView
                    android:layout_marginStart="@dimen/_40"
                    android:drawablePadding="@dimen/_8"
                    android:drawableStart="@drawable/ic_person_add_24px"
                    android:layout_marginTop="@dimen/_4"
                    android:textStyle="bold"
                    android:layout_below="@+id/passengers"
                    android:id="@+id/tv_nu_passengers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{tripinfo.passengers}"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/_20s"
                    />

            </RelativeLayout>


            <RelativeLayout


                android:layout_below="@+id/line_tow"
                android:layout_toEndOf="@+id/layout_passengers"
                android:id="@+id/layout_price"
                android:layout_marginTop="@dimen/_24"
                android:layout_marginStart="@dimen/_24"
                android:layout_width="@dimen/_150"
                android:layout_height="wrap_content">


                <TextView

                    android:layout_marginStart="@dimen/_40"
                    android:drawableEnd="@drawable/ic_mony"
                    android:drawablePadding="@dimen/_8"
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{tripinfo.price}"
                    android:textStyle="bold"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/_28s"
                    />







            </RelativeLayout>


            <Button
                android:layout_marginTop="@dimen/_8"
                android:layout_below="@+id/layout_price"
                android:layout_width="@dimen/_150"
                android:layout_height="@dimen/_40"
                android:layout_centerHorizontal="true"
                android:background="@drawable/custom_button_drawable2"
                android:elevation="@dimen/_4"
                android:text="@string/description"
                android:textColor="@color/trans2" />
        </RelativeLayout>







    </androidx.cardview.widget.CardView>




</androidx.cardview.widget.CardView>




</RelativeLayout>


    </layout>