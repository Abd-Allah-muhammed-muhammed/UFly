<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="tripinfo"
            type="com.abdallah.ufly.model.trips.TripsResponse"/>

    </data>




    <RelativeLayout
        android:id="@+id/item_tip"
        android:layout_margin="@dimen/_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">





                <RelativeLayout
                    android:background="@drawable/bg_card_trip"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_margin="@dimen/_8"
                        android:orientation="horizontal"
                        android:id="@+id/layout_dep"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textStyle="bold"
                            android:layout_marginStart="@dimen/_16"
                            android:id="@+id/depar"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:layout_weight="2"
                            android:layout_marginTop="@dimen/_8"
                            android:layout_height="wrap_content"
                            android:text="@string/departure"
                            android:textColor="@color/blck"
                            android:textSize="@dimen/_18s"
                            />




                        <TextView
                            android:layout_marginTop="@dimen/_8"
                            android:textStyle="bold"
                            android:layout_marginEnd="@dimen/_28"
                            android:gravity="center"
                            android:id="@+id/arr"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:text="@string/arrival"
                            android:textColor="@color/blck"
                            android:textSize="@dimen/_18s"
                            />


                    </LinearLayout>


                    <LinearLayout
                        android:background="@drawable/bg_desc_stock"
                        android:layout_marginStart="@dimen/_20"
                        android:layout_marginEnd="@dimen/_20"
                        android:id="@+id/layout_dep_view"
                        android:layout_below="@+id/layout_dep"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50">

                        <TextView
                            android:paddingEnd="@dimen/_14"
                            android:paddingStart="@dimen/_14"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:id="@+id/tv_departure"
                            android:hint="cairo"
                            android:textColorHint="@color/color5"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="@{tripinfo.departuer}"
                            android:textColor="@color/color5"
                            android:textSize="@dimen/_18s"
                            />
                        <TextView
                            android:fontFamily="sans-serif-smallcaps"
                            android:gravity="center"
                            android:id="@+id/to"
                            android:layout_width="0dp"
                            android:layout_weight=".5"
                            android:layout_height="match_parent"
                            android:text="@string/to"
                            android:textColor="@color/color3"
                            android:textSize="@dimen/_18s"
                            />



                        <TextView
                            android:paddingEnd="@dimen/_14"
                            android:paddingStart="@dimen/_14"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:id="@+id/tv_arrival"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:hint="alexandria"
                            android:textColorHint="@color/color5"
                            android:layout_height="match_parent"
                            android:text="@{tripinfo.arrival}"
                            android:textColor="@color/color5"
                            android:textSize="@dimen/_18s"
                            />

                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/layout_date"
                        android:layout_margin="@dimen/_8"
                        android:orientation="horizontal"
                        android:layout_below="@+id/layout_dep_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textStyle="bold"
                            android:layout_marginStart="@dimen/_28"
                            android:id="@+id/date"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:text="@string/date"
                            android:textColor="@color/blck"
                            android:textSize="@dimen/_18s"
                            />




                        <TextView
                            android:textStyle="bold"
                            android:layout_marginEnd="@dimen/_35"
                            android:gravity="end"
                            android:id="@+id/date_until"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:text="@string/to_date"
                            android:textColor="@color/blck"
                            android:textSize="@dimen/_18s"
                            />


                    </LinearLayout>


                    <LinearLayout
                        android:background="@drawable/bg_desc_stock"
                        android:layout_marginEnd="@dimen/_20"
                        android:layout_marginStart="@dimen/_20"
                        android:id="@+id/layout_date_view"
                        android:layout_below="@+id/layout_date"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50">

                        <TextView
                            android:background="@drawable/bg_desc_stock"

                            android:padding="@dimen/_6"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:id="@+id/tv_from_data"
                            android:hint="@string/monday_01_01_2020"
                            android:textColorHint="@color/color5"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="@{tripinfo.dateFrom}"
                            android:textColor="@color/color5"
                            android:textSize="@dimen/_14s"
                            />
                        <TextView
                            android:fontFamily="sans-serif-smallcaps"

                            android:gravity="center"
                            android:id="@+id/until"
                            android:layout_width="0dp"
                            android:layout_weight=".5"
                            android:layout_height="match_parent"
                            android:text="@string/until"
                            android:textColor="@color/color3"
                            android:textSize="@dimen/_18s"
                            />



                        <TextView

                            android:background="@drawable/bg_desc_stock"
                            android:id="@+id/tv_to_date"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="@dimen/_6"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:hint="monday 01/01/2020"
                            android:textColorHint="@color/color5"
                            android:layout_height="match_parent"
                            android:text="@{tripinfo.dateUntil}"
                            android:textColor="@color/color5"
                            android:textSize="@dimen/_14s"
                            />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/layout_time"
                        android:layout_margin="@dimen/_8"
                        android:orientation="horizontal"
                        android:layout_below="@+id/layout_date_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textStyle="bold"
                            android:layout_marginStart="@dimen/_28"
                            android:id="@+id/time"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:text="@string/time_in"
                            android:textColor="@color/blck"
                            android:textSize="@dimen/_18s"
                            />




                        <TextView
                            android:textStyle="bold"
                            android:layout_marginEnd="@dimen/_35"
                            android:gravity="end"
                            android:id="@+id/time_until"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:text="@string/time_out"
                            android:textColor="@color/blck"
                            android:textSize="@dimen/_18s"
                            />


                    </LinearLayout>




                    <LinearLayout
                        android:background="@drawable/bg_desc_stock"
                        android:layout_marginEnd="@dimen/_20"
                        android:layout_marginStart="@dimen/_20"
                        android:id="@+id/layout_time_view"
                        android:layout_below="@+id/layout_time"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50">

                        <TextView
                            android:background="@drawable/bg_desc_stock"

                            android:padding="@dimen/_6"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:id="@+id/tv_from_time"
                            android:hint="24:00"
                            android:textColorHint="@color/color5"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="@{tripinfo.time_in}"
                            android:textColor="@color/color5"
                            android:textSize="@dimen/_14s"
                            />
                        <TextView
                            android:fontFamily="sans-serif-smallcaps"

                            android:gravity="center"
                            android:id="@+id/to_time"
                            android:layout_width="0dp"
                            android:layout_weight=".5"
                            android:layout_height="match_parent"
                            android:text="@string/to"
                            android:textColor="@color/color3"
                            android:textSize="@dimen/_18s"
                            />



                        <TextView
                            android:background="@drawable/bg_desc_stock"

                            android:id="@+id/tv_to_time"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="@dimen/_6"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:hint="24:00"
                            android:textColorHint="@color/color5"
                            android:layout_height="match_parent"
                            android:text="@{tripinfo.time_out}"
                            android:textColor="@color/color5"
                            android:textSize="@dimen/_14s"
                            />


                    </LinearLayout>



                    <LinearLayout
                        android:background="@drawable/bg_desc_stock"

                        android:layout_marginEnd="@dimen/_18"
                        android:layout_marginStart="@dimen/_18"
                        android:layout_marginTop="@dimen/_16"

                        android:orientation="horizontal"
                        android:layout_below="@+id/layout_time_view"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50">






                        <TextView

                            android:id="@+id/available_booked"
                            android:textColor="@color/color3"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginStart="@dimen/_8"
                            android:layout_marginEnd="@dimen/_8"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>


                        <TextView
                            android:gravity="center"
                            android:textColorHint="@color/white"
                            android:hint="150"
                            android:drawableEnd="@drawable/ic_mony"
                            android:drawablePadding="@dimen/_8"
                            android:id="@+id/price"
                            android:layout_width="0dp"
                            android:layout_weight=".7"
                            android:layout_height="match_parent"
                            android:text="@{tripinfo.price}"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_32s"
                            />
                        <TextView
                            android:id="@+id/number_booked"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/color3"
                            android:layout_marginStart="@dimen/_8"
                            android:layout_marginEnd="@dimen/_8"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>


                    </LinearLayout>


                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_margin="@dimen/_30"
                        android:id="@+id/transbg"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_250"
                        android:background="@drawable/transbg">




                    </RelativeLayout>


                </RelativeLayout>






        <ImageView
            android:visibility="gone"
            android:id="@+id/completed"
            android:layout_width="@dimen/_150"
            android:layout_height="@dimen/_150"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_complete"/>




    </RelativeLayout>

</layout>