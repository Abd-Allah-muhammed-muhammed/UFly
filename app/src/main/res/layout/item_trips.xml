<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="tripinfo"
            type="com.abdallah.ufly.model.trips.TripsResponse" />

    </data>


    <RelativeLayout
        android:id="@+id/item_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginEnd="@dimen/_4"
        android:layout_marginStart="@dimen/_4"
        android:layout_marginBottom="@dimen/_20"
      >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_desc_stock"
            android:orientation="horizontal">




            <LinearLayout
                android:layout_margin="@dimen/_4"
                android:id="@+id/layout_dep_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50"
                android:background="@drawable/ic_number_orange_24dp">

                <TextView
                    android:background="@drawable/bg_desc_stock"

                    android:id="@+id/tv_departure"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="cairo"
                    android:text="@{tripinfo.departuer}"
                    android:textColor="@color/color3"
                    android:textColorHint="@color/color3"
                    android:textSize="@dimen/_18s"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/to"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:text="@string/to"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/_18s" />


                <TextView
                    android:background="@drawable/bg_desc_stock"

                    android:id="@+id/tv_arrival"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="alexandria"
                    android:paddingStart="@dimen/_14"
                    android:paddingEnd="@dimen/_14"
                    android:text="@{tripinfo.arrival}"
                    android:textColor="@color/color3"
                    android:textColorHint="@color/color3"
                    android:textSize="@dimen/_18s"
                    android:textStyle="bold" />

            </LinearLayout>




            <LinearLayout
                android:id="@+id/layout_date_view"
                android:background="@drawable/ic_number_orange_24dp"
                android:layout_margin="@dimen/_4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50"
                android:layout_below="@+id/layout_dep_view"
               >

                <TextView
                    android:id="@+id/tv_from_data"
                    android:background="@drawable/bg_desc_stock"

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="@string/monday_01_01_2020"
                    android:padding="@dimen/_6"
                    android:text="@{tripinfo.dateFrom}"
                    android:textColor="@color/color5"
                    android:textColorHint="@color/color5"
                    android:textSize="@dimen/_14s"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/until"

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:text="@string/until"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/_18s" />


                <TextView
                    android:background="@drawable/bg_desc_stock"

                    android:id="@+id/tv_to_date"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="monday 01/01/2020"
                    android:padding="@dimen/_6"
                    android:text="@{tripinfo.dateUntil}"
                    android:textColor="@color/color5"
                    android:textColorHint="@color/color5"
                    android:textSize="@dimen/_14s"
                    android:textStyle="bold" />


            </LinearLayout>






            <LinearLayout
                android:layout_width="match_parent"

                android:id="@+id/layout_price"

                android:layout_height="@dimen/_50"

                android:background="@drawable/bg_desc_stock_orange"
                android:layout_below="@+id/layout_date_view"
                android:layout_margin="@dimen/_4"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/available_booked"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/dark"
                    android:textStyle="bold" />


                <TextView
                    android:background="@drawable/bg_desc_stock_orange"

                    android:id="@+id/price"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:drawableEnd="@drawable/ic_attach_money_black_24dp"
                    android:gravity="center"
                    android:hint="150"
                    android:text="@{tripinfo.price}"
                    android:textColor="@color/color5"
                    android:textColorHint="@color/color5"
                    android:textSize="@dimen/_24_sp"
                    android:textStyle="bold" />

                <TextView

                    android:id="@+id/number_booked"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/dark"
                    android:textStyle="bold" />


            </LinearLayout>




            <RelativeLayout
                android:layout_marginEnd="@dimen/_16"
                android:layout_marginStart="@dimen/_16"
                android:layout_centerInParent="true"
                android:id="@+id/transbg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130"
                android:background="@drawable/transbg"
                android:visibility="gone">


            </RelativeLayout>


        </RelativeLayout>


        <ImageView
            android:id="@+id/completed"
            android:layout_width="@dimen/_100"
            android:layout_height="@dimen/_100"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_complete"
            android:visibility="gone" />


    </RelativeLayout>

</layout>