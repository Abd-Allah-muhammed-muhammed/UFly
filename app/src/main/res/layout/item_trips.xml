<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="tripinfo"
            type="com.abdallah.ufly.model.trips.TripsResponse"/>

    </data>

    <RelativeLayout
        android:layout_marginStart="@dimen/_4"
        android:layout_marginEnd="@dimen/_4"
        android:layout_marginTop="@dimen/_2"
        android:id="@+id/item_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



            <RelativeLayout

                android:background="@drawable/bg_desc_stock"
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_margin="@dimen/_8"
                        android:orientation="horizontal"
                        android:id="@+id/layout_dep"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textStyle="bold"
                            android:layout_marginStart="@dimen/_16"
                            android:id="@+id/depar"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:text="@string/departure"
                            android:textColor="@color/color3"
                            android:textSize="@dimen/_18s"
                            />




                        <TextView
                            android:textStyle="bold"
                            android:layout_marginEnd="@dimen/_28"
                            android:gravity="end"
                            android:id="@+id/arr"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:text="@string/arrival"
                            android:textColor="@color/color3"
                            android:textSize="@dimen/_18s"
                            />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginStart="@dimen/_8"
                        android:layout_marginEnd="@dimen/_8"
                        android:id="@+id/layout_dep_view"
                        android:background="@drawable/bg_desc_stock_orange"
                        android:layout_below="@+id/layout_dep"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50">

                        <TextView
                            android:textStyle="bold"
                            android:gravity="center"
                            android:id="@+id/tv_departure"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="@{tripinfo.departuer}"
                            android:textColor="@color/dark_"
                            android:textSize="@dimen/_20s"
                            />
                        <TextView
                            android:background="@drawable/bg_desc_stock_white"
                            android:fontFamily="sans-serif-smallcaps"
                            android:gravity="center"
                            android:id="@+id/to"
                            android:layout_width="0dp"
                            android:layout_weight=".5"
                            android:layout_height="match_parent"
                            android:text="@string/to"
                            android:textColor="@color/dark_"
                            android:textSize="@dimen/_18s"
                            />



                        <TextView
                            android:textStyle="bold"
                            android:gravity="center"
                            android:id="@+id/tv_arrival"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textColorHint="@color/dark_"
                            android:layout_height="match_parent"
                            android:text="@{tripinfo.arrival}"
                            android:textColor="@color/dark_"
                            android:textSize="@dimen/_20s"
                            />

                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/layout_date"
                        android:layout_margin="@dimen/_8"
                        android:orientation="horizontal"
                        android:layout_below="@+id/layout_dep_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textStyle="bold"
                            android:layout_marginStart="@dimen/_28"
                            android:id="@+id/date"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:text="@string/date"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_18s"
                            />




                        <TextView
                            android:textStyle="bold"
                            android:layout_marginEnd="@dimen/_35"
                            android:gravity="end"
                            android:id="@+id/date_until"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:text="@string/to_date"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_18s"
                            />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginEnd="@dimen/_8"
                        android:layout_marginStart="@dimen/_8"
                        android:id="@+id/layout_date_view"
                        android:background="@drawable/bg_desc_stock_white"
                        android:layout_below="@+id/layout_date"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50">

                        <TextView

                            android:padding="@dimen/_6"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:id="@+id/tv_from_data"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="@{tripinfo.dateFrom}"
                            android:textColor="@color/dark_"
                            android:textSize="@dimen/_14s"
                            />
                        <TextView
                            android:fontFamily="sans-serif-smallcaps"

                            android:background="@drawable/bg_desc_stock"
                            android:gravity="center"
                            android:id="@+id/until"
                            android:layout_width="0dp"
                            android:layout_weight=".5"
                            android:layout_height="match_parent"
                            android:text="@string/until"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_18s"
                            />



                        <TextView
                            android:id="@+id/tv_to_date"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="@dimen/_6"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:text="@{tripinfo.dateUntil}"
                            android:textColor="@color/dark_"
                            android:textSize="@dimen/_14s"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginBottom="@dimen/_8"
                        android:layout_marginTop="@dimen/_18"
                        android:layout_marginEnd="@dimen/_8"
                        android:layout_marginStart="@dimen/_8"
                        android:id="@+id/layout_price"
                        android:background="@drawable/bg_desc_stock_orange"
                        android:layout_below="@+id/layout_date_view"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50">

                        <TextView

                            android:padding="@dimen/_6"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:id="@+id/availableBooked"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:textColor="@color/dark_"
                            android:textSize="@dimen/_14s"
                            />
                        <TextView

                            android:background="@drawable/bg_btn_book_whit"

                            android:layout_marginTop="@dimen/_2"
                            android:layout_marginBottom="@dimen/_2"
                            android:paddingEnd="@dimen/_20"
                            android:paddingStart="@dimen/_20"
                            android:hint="1500"
                            android:textColorHint="@color/dark_"
                            android:drawableEnd="@drawable/ic_attach_money_black_24dp"
                            android:id="@+id/price"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="@{tripinfo.price}"
                            android:textStyle="bold"
                            android:textColor="@color/dark_"
                            android:textSize="@dimen/_18s"
                            />



                        <TextView
                            android:id="@+id/numberBooked"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="@dimen/_6"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:textColor="@color/dark_"
                            android:textSize="@dimen/_14s"
                            />


                    </LinearLayout>







                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:src="@drawable/ic_complete"
                        android:layout_centerInParent="true"
                        android:id="@+id/completed"
                        android:visibility="gone"/>


                </RelativeLayout>







            </RelativeLayout>

        <View
            android:layout_marginBottom="@dimen/_4"
            android:layout_marginTop="@dimen/_4"
            android:layout_below="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_18"
            android:background="@color/dark_"
            />


    </RelativeLayout>

</layout>