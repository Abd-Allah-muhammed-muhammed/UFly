<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <data>


        <variable
            name="add_trip"
            type="com.abdallah.ufly.ui.company.add_trip.AddTripViewModel" />
        
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark">

        <ScrollView
            android:id="@+id/sl_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--parent layout id is  layout_desc-->
            <RelativeLayout
                android:id="@+id/layout_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:id="@+id/layout_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/back"
                        android:layout_width="@dimen/_50"
                        android:layout_height="@dimen/_50"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/ic_back" />
                </RelativeLayout>
                <!-- all info in this layout id is layout_all_info -->
                <RelativeLayout
                    android:id="@+id/layout_all_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_top"
                    android:layout_margin="@dimen/_16"
                    android:background="@drawable/bg_desc_stock">


                    <!-- from to shape with bus icon -->
                    <RelativeLayout

                        android:id="@+id/layout_desc_from_to"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_16"
                        android:layout_marginTop="@dimen/_8"
                        android:background="@drawable/bg_btn_book_whit">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/layout_from"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/_6"
                                    android:gravity="center"
                                    android:lines="1"
                                    android:paddingStart="@dimen/_14"
                                    android:paddingEnd="@dimen/_14s"
                                    android:text="@string/from"
                                    android:textColor="@color/color3"
                                    android:textSize="@dimen/_18s" />

                                <EditText

                                    android:onTextChanged="@{add_trip::setFrom}"

                                    android:id="@+id/desc_from"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:drawableStart="@drawable/ic_back_dark"
                                    android:drawableEnd="@drawable/ic_back_right_dark"
                                    android:drawablePadding="@dimen/_4"
                                    android:gravity="center"
                                    android:hint="..."
                                    android:paddingStart="@dimen/_14"
                                    android:paddingEnd="@dimen/_14s"
                                    android:paddingBottom="@dimen/_14"
                                    android:textColor="@color/dark"
                                    android:textColorHint="@color/dark"
                                    android:textSize="@dimen/_14s"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:src="@drawable/ic_bus" />

                            <LinearLayout
                                android:id="@+id/layout_to"

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_6"
                                    android:gravity="center"
                                    android:lines="1"
                                    android:paddingStart="@dimen/_14"
                                    android:paddingEnd="@dimen/_14s"
                                    android:text="@string/to"
                                    android:textColor="@color/color3"
                                    android:textSize="@dimen/_18s" />

                                <EditText

                                    android:id="@+id/desc_to"

                                    android:onTextChanged="@{add_trip::setTo}"

                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent"
                                    android:drawableStart="@drawable/ic_back_dark"
                                    android:drawableEnd="@drawable/ic_back_right_dark"
                                    android:drawablePadding="@dimen/_4"
                                    android:gravity="center"
                                    android:hint="..."
                                    android:paddingStart="@dimen/_14"
                                    android:paddingEnd="@dimen/_14s"
                                    android:paddingBottom="@dimen/_14"
                                    android:textColor="@color/dark"
                                    android:textColorHint="@color/dark"
                                    android:textSize="@dimen/_14s"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                    <!--line one -->
                    <TextView
                        android:id="@+id/line_1"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@+id/layout_desc_from_to"
                        android:layout_margin="@dimen/_16"
                        android:layout_marginTop="@dimen/_16"
                        android:background="@color/trans3" />






                    <LinearLayout
                        android:background="@drawable/bg_desc_stock"
                        android:layout_marginEnd="@dimen/_20"
                        android:layout_marginStart="@dimen/_20"
                        android:id="@+id/layout_date_view"
                        android:layout_below="@+id/line_1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50">

                        <TextView



                            android:onClick="@{(view)-> add_trip.dateFrom(view)}"
                            android:drawableStart="@drawable/ic_number_green"
                            android:background="@android:color/transparent"
                            android:padding="@dimen/_6"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:id="@+id/tv_from_data"
                            android:hint="@string/date"
                            android:textColorHint="@color/color5"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:textColor="@color/color5"
                            android:textSize="@dimen/_14s"
                            />
                        <TextView
                            android:fontFamily="sans-serif-smallcaps"

                            android:gravity="center"
                            android:id="@+id/until"
                            android:layout_width="0dp"
                            android:layout_weight=".5"
                            android:layout_height="match_parent"
                            android:text="@string/until"
                            android:textColor="@color/color3"
                            android:textSize="@dimen/_18s"
                            />



                        <TextView

                            android:onClick="@{(view)-> add_trip.dateUntil(view)}"

                            android:background="@android:color/transparent"
                            android:drawableStart="@drawable/ic_number_green"
                            android:id="@+id/tv_to_date"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="@dimen/_6"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:hint="@string/to_date"
                            android:textColorHint="@color/color5"
                            android:layout_height="match_parent"
                            android:textColor="@color/color5"
                            android:textSize="@dimen/_14s"
                            />


                    </LinearLayout>



                    <!-- text view  include   id is inclouds_tv-->
                    <TextView

                        android:id="@+id/inclouds_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layout_date_view"
                        android:layout_marginStart="@dimen/_24"
                        android:layout_marginTop="@dimen/_24"
                        android:layout_marginEnd="@dimen/_24"
                        android:drawableStart="@drawable/ic_includes_green"
                        android:drawablePadding="@dimen/_24"
                        android:text="@string/inclouds"
                        android:textColor="@color/bag"
                        android:textSize="@dimen/_20s"
                        android:textStyle="bold" />


                    <!--                     rv includ id is layout_rv-->
                    <RelativeLayout
                        android:id="@+id/layout_rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/inclouds_tv"
                        android:layout_margin="@dimen/_16"
                        android:background="@drawable/bg_btn_book_whit">

                        <EditText



                            android:onTextChanged="@{add_trip::setIncludes}"

                            android:id="@+id/desc_include"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_24"
                            android:background="@android:color/transparent"
                            android:drawableStart="@drawable/ic_back_dark"
                            android:drawableEnd="@drawable/ic_back_right_dark"
                            android:gravity="center"
                            android:hint="..."
                            android:textColor="@color/dark"
                            android:textSize="@dimen/_18s" />

                    </RelativeLayout>


                    <!--                    trip info tv  id is tripinfo_tv-->
                    <TextView
                        android:id="@+id/tripinfo_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layout_rv"
                        android:layout_marginStart="@dimen/_24"
                        android:layout_marginTop="@dimen/_24"
                        android:layout_marginEnd="@dimen/_24"
                        android:drawableStart="@drawable/ic_info_outline_green_24dp"
                        android:drawablePadding="@dimen/_24"
                        android:text="@string/trip_information"
                        android:textColor="@color/bag"
                        android:textSize="@dimen/_20s"
                        android:textStyle="bold" />

                    <!--                    rv info layout_rv2 -->
                    <RelativeLayout

                        android:id="@+id/layout_rv2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/tripinfo_tv"
                        android:layout_margin="@dimen/_16"
                        android:background="@drawable/bg_btn_book_whit">

                        <EditText


                            android:onTextChanged="@{add_trip::setDescription}"

                            android:id="@+id/desc_tv_trip_info"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_30"
                            android:background="@android:color/transparent"
                            android:drawableStart="@drawable/ic_back_dark"
                            android:drawableEnd="@drawable/ic_back_right_dark"
                            android:gravity="center"
                            android:hint=".......\n.......\n......."
                            android:textColor="@color/dark"
                            android:textSize="@dimen/_20s"
                            android:textStyle="bold" />


                    </RelativeLayout>


                    <TextView
                        android:id="@+id/text_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layout_rv2"
                        android:layout_margin="@dimen/_24"
                        android:drawableStart="@drawable/ic_person_outline_black_24dp"
                        android:drawablePadding="@dimen/_24"
                        android:text="Number of Passengers"
                        android:textColor="@color/bag"
                        android:textSize="@dimen/_20s"
                        android:textStyle="bold" />


                    <LinearLayout


                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_number"
                        android:layout_margin="@dimen/_24"
                        android:background="@drawable/bg_desc_stock"
                        android:orientation="horizontal">


                        <EditText


                            android:onTextChanged="@{add_trip::setPrice}"

                            android:inputType="number"

                            android:padding="@dimen/_12"

                            android:id="@+id/count_passenger"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:drawableEnd="@drawable/ic_number_green"
                            android:gravity="center"
                            android:hint="@string/price"
                            android:paddingStart="@dimen/_12"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="@dimen/_18s"
                            android:textStyle="bold">

                        </EditText>

                        <EditText
                            android:inputType="number"
                            android:onTextChanged="@{add_trip::setPassengers}"

                            android:id="@+id/count_price"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:drawableEnd="@drawable/ic_number_orange_24dp"
                            android:gravity="center"
                            android:hint="@string/passengers"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:padding="@dimen/_12"
                            android:textSize="@dimen/_14s"
                            android:textStyle="bold">

                        </EditText>


                    </LinearLayout>


                </RelativeLayout>


                <ProgressBar

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/desc_btn_book"
                    android:layout_alignEnd="@+id/desc_btn_book"
                    android:layout_alignBottom="@+id/desc_btn_book"
                    android:layout_marginStart="136dp"
                    android:layout_marginEnd="147dp"
                    android:layout_marginBottom="2dp"
                    android:elevation="10dp"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/white"
                    android:indeterminateTintMode="src_atop"
                    android:visibility="@{add_trip.progress}" />

                <Button

                    android:onClick="@{(view)->add_trip.addTrip(view)}"
                    android:id="@+id/desc_btn_book"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_all_info"
                    android:layout_marginStart="@dimen/_40"
                    android:layout_marginTop="@dimen/_4"
                    android:layout_marginEnd="@dimen/_40"
                    android:layout_marginBottom="@dimen/_24"
                    android:background="@drawable/bg_btn_book_green"
                    android:elevation="2dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="@string/add_trip"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/_20s"
                    android:textStyle="bold" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/desc_btn_book"
                    android:layout_alignParentBottom="true">


                </RelativeLayout>


            </RelativeLayout>


        </ScrollView>


    </RelativeLayout>


</layout>